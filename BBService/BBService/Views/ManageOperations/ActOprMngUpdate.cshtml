@model BBService.Models.ViewHome
@{
    ViewBag.Title = "ActOprMngUpdate";
}


<div id="actOperationManagUpdate">
    <div class="contaiber-fluid">
        <div class="row">
            <div class="col-md-6 inputAccident">
                <h1>Yeniləyin :</h1>
                <form method="post" action="@Url.Action("ActOprMngUpdate", "ManageOperations")" class="formTest">

                    <div class="form-group">
                        <label for="OperationId" class="col-sm-10 col-form-label">Əməliyyat :</label>
                        <div class="col-sm-10">
                            <select id="OperationId" class="form-control inputItem inputItemSelect selectpicker" name="OperationId" data-live-search="true">
                                <option value="0" selected>Seçin ...</option>
                                @foreach (var item in Model.Operations)
                                {
                                    <option @(ViewBag.Act.OperationId == item.Id ? "selected" : "") value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Name" class="col-sm-10 col-form-label">Action adı :</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control inputItem" id="Name" name="Name" value="@ViewBag.Act.Name" placeholder="Daxil edin ...">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary addButton">Yenilə</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

