
@{
    ViewBag.Title = "MngOprCreate";
    DateTime date = DateTime.Now;
}
<div id="createUserAccessOperation">
    <div class="contaiber-fluid">
        <div class="row">
            <div class="col-md-12 inputAccident">
                <h1>Yeni Əməliyyat yarat :</h1>
                <form method="post" @Url.Action("MngOprCreate", "ManageOperations")>
                    <div class="form-group">
                        <label for="operation" class="col-sm-10 col-form-label">Əməliyyat :</label>
                        <div class="col-sm-10">
                            <input type="text" name="name" class="form-control inputItem" id="operation" placeholder="Daxil edin ...">
                        </div>
                    </div>
                    <div class="form-group form-check">
                        <div class="col-sm-10">
                            <input type="checkbox" name="read" value="true" class="form-check-input" id="read">
                        </div>
                        <label class="col-sm-10 form-check-label" for="read">Baxmaq</label>
                    </div>
                    <div class="form-group form-check">
                        <div class="col-sm-10">
                            <input type="checkbox" name="create" value="true" class="form-check-input" id="create">
                        </div>
                        <label class="col-sm-10 form-check-label" for="create">Yaratmaq</label>
                    </div>
                    <div class="form-group form-check">
                        <div class="col-sm-10">
                            <input type="checkbox" name="update" value="true" class="form-check-input" id="update">
                        </div>
                        <label class="col-sm-10 form-check-label" for="update">Yeniləmək</label>
                    </div>
                    <div class="form-group form-check">
                        <div class="col-sm-10">
                            <input type="checkbox" name="delete" value="true" class="form-check-input" id="delete">
                        </div>
                        <label class="col-sm-10 form-check-label" for="delete">Silmək</label>
                    </div>
                    <!-- Hiden inputs -->
                    <input type="hidden" class="form-control" name="date" value="@date">
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary addButton">Əlavə et</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
