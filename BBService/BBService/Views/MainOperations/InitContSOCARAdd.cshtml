@model BBService.Models.ViewHome
@{
    ViewBag.Title = "InitContSOCARAdd";
}

<div id="InitContSOCARAdd">
    <div class="contaiber-fluid">
        <div class="row">
            <div class="col-md-12 inputAccident">
                <h1>Avtobusların ilkin vəziyyətinə nəzarət kartı - Giriş :</h1>
                <form method="post" @Url.Action("InitContSOCARAdd", "MainOperations") class="formTest" autocomplete="off">
                    <div class="row">
                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                <label class="col-sm-12 col-form-label">Nəqliyyat vasitəsi :</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control inputItem" disabled value="@(ViewBag.InitCont.VehicleId!=null?ViewBag.InitCont.Vehicles.Number:"")">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-12 col-form-label">Xətt :</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control inputItem" disabled value="@(ViewBag.InitCont.RouteId!=null?ViewBag.InitCont.Routes.Number:"")">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-12 col-form-label">Sürücü - 1 :</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control inputItem" disabled value="@(ViewBag.InitCont.FirstDriverId!=null?(ViewBag.InitCont.Employees4.Surname+" "+ ViewBag.InitCont.Employees4.Name+" "+ViewBag.InitCont.Employees4.FutherName):"")">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-12 col-form-label">Sürücü - 2 :</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control inputItem" disabled value="@(ViewBag.InitCont.SecondDriverId!=null?(ViewBag.InitCont.Employees5.Surname+" "+ ViewBag.InitCont.Employees5.Name+" "+ViewBag.InitCont.Employees5.FutherName):"")">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-12 col-form-label">Tarix və saat :</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control inputItem" disabled value="@(ViewBag.InitCont.LeavingTime!=null?ViewBag.InitCont.LeavingTime.ToString("dd.MM.yyyy hh:mm"):"")">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                <label for="DateSOCAR" class="col-sm-12 col-form-label">Tarix :</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control datepicker inputItem" id="DateSOCAR" name="DateSOCAR" placeholder="Daxil edin ...">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="FuelAmount1" class="col-sm-12 col-form-label">SOCAR Yanacaq - 1 :</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control inputItem" id="FuelAmount1" name="FuelAmount1" placeholder="Daxil edin ...">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="FuelTime1" class="col-sm-12 col-form-label">Doldurulma vaxtı - 1 :</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control inputItem timePickerSOCAR inputItemWith-1" id="FuelTime1" name="FuelTime1" placeholder="Saat seçin ...">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="FuelAmount2" class="col-sm-12 col-form-label">SOCAR Yanacaq - 2 :</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control inputItem" id="FuelAmount2" name="FuelAmount2" placeholder="Daxil edin ...">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="FuelTime2" class="col-sm-12 col-form-label">Doldurulma vaxtı - 2 :</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control inputItem timePickerSOCAR inputItemWith-1" id="FuelTime2" name="FuelTime2" placeholder="Saat seçin ...">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="FuelAmount3" class="col-sm-12 col-form-label">SOCAR Yanacaq - 3 :</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control inputItem" id="FuelAmount3" name="FuelAmount3" placeholder="Daxil edin ...">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="FuelTime3" class="col-sm-12 col-form-label">Doldurulma vaxtı - 3 :</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control inputItem timePickerSOCAR inputItemWith-1" id="FuelTime3" name="FuelTime3" placeholder="Saat seçin ...">
                                </div>
                            </div>

                            <input type="hidden" id="InitContId" name="InitContId" value="@ViewBag.InitCont.Id">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group row">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-primary addButton">Əlavə edin</button>
                                </div>

                                <div class="col-sm-12 cancel">
                                    <a href="@Url.Action("InitContSOCARIndex","MainOperations")">Ləğv edin</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

