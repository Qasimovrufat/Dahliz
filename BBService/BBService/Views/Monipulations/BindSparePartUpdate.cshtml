@model BBService.Models.ViewHome
@{
    ViewBag.Title = "BindSparePartUpdate";
}


<div id="BindSparePartUpdate">
    <div class="contaiber-fluid">
        <div class="row">
            <div class="col-md-12 col-lg-6 inputAccident">
                <h1>Yeniləyin :</h1>
                <form method="post" action="@Url.Action("BindSparePartUpdate", "Monipulations")" class="formTest">

                    <div class="form-group inputHere">
                        <label for="MaintenanceTypeId" class="col-sm-10 col-form-label">TQ :</label>
                        <div class="col-sm-10">
                            <select id="MaintenanceTypeId" class="form-control inputItem inputItemSelect selectpicker" name="MaintenanceTypeId" data-live-search="true">
                                <option selected>Seçin ...</option>
                                @foreach (var item in ViewBag.Maintenance)
                                {
                                    <option @(ViewBag.WhToMain.MaintenanceTypeId == item.Id ? "selected" : "") value="@item.Id">@(item.Name + " - " + item.MaintenanceValue)</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group inputHere">
                        <label for="VehicleBrand" class="col-sm-10 col-form-label">Nəqliyyat vasitəsi markası :</label>
                        <div class="col-sm-10">
                            <select id="VehicleBrand" class="form-control inputItem inputItemSelect selectpicker" data-live-search="true">
                                <option selected>Seçin ...</option>
                                @foreach (var item in ViewBag.VehicleBrand)
                                {
                                    <option @(ViewBag.WhToMain.WarehouseId != null ? (ViewBag.WhToMain.TempWarehouse.VehiclesBrand.Id == item.Id ? "selected" : "") : "") value="@item.Id">@item.Brand</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group inputHere">
                        <label for="WarehouseId" class="col-sm-10 col-form-label">Ehtiyyat hissəsi :</label>
                        <div class="col-sm-10">
                            <select id="WarehouseId" class="form-control inputItem inputItemSelect selectpicker" name="WarehouseId" data-live-search="true">
                                <option selected>Seçin ...</option>
                                @foreach (var item in Model.TempWarehouse)
                                {
                                    <option @(ViewBag.WhToMain.WarehouseId != null ? (ViewBag.WhToMain.WarehouseId == item.Id ? "selected" : "") : "") value="@item.Id">@(item.SparePartCode + " - " + item.Name) </option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Quantity" class="col-sm-10 col-form-label">Miqdar :</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control inputItem numberValidInput" id="Quantity" name="Quantity" value="@(ViewBag.WhToMain.Quantity!=null? ViewBag.WhToMain.Quantity.ToString("#.##"):"")">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Limit" class="col-sm-10 col-form-label">Limit :</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control inputItem numberValidInput" id="Limit" name="NotRequireSPLimit" value="@(ViewBag.WhToMain.NotRequireSPLimit !=null? ViewBag.WhToMain.NotRequireSPLimit.ToString("#.##"):"")">
                        </div>
                    </div>

                    <input type="hidden" name="Id" value="@ViewBag.WhToMain.Id">

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary addButton">Əlavə et</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

