@model BBService.Models.ViewHome
@{
    ViewBag.Title = "UsrOprUpdate";
    DateTime date = DateTime.Now;
}
<div id="updateUser">
    <div class="contaiber-fluid">
        <div class="row">
            <div class="col-md-12 inputAccident">
                <h1>Yeni istifadəçi yarat :</h1>
                <form method="post" @Url.Action("UsrOprUpdate", "UserOperations") enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                <label for="Fullname" class="col-sm-12 col-form-label">Ad, soyad :</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control inputItem" name="Fullname" id="Fullname" placeholder="Daxil edin ..." value="@(ViewBag.User.Fullname==null?"":ViewBag.User.Fullname)">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="email" class="col-sm-12 col-form-label">Email :</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control inputItem" name="Email" id="email" placeholder="Daxil edin ..." value="@(ViewBag.User.Email==null?"":ViewBag.User.Email)">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="Password" class="col-sm-12 col-form-label">Password :</label>
                                <div class="col-sm-12">
                                    <input type="password" class="form-control inputItem" name="PasswordOld" id="Password" value="123123" disabled>
                                    <input type="text" class="form-control inputItem" name="Password" id="Password" placeholder="Yeni password">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-4">
                            <div class="form-group">
                                <label for="phone" class="col-sm-12 col-form-label">Telefon :</label>
                                <div class="col-sm-12">
                                    <input type="text" class="form-control inputItem" name="Phone" id="phone" value="@(ViewBag.User.Phone==null?"":ViewBag.User.Phone)" placeholder="Daxil edin ...">
                                </div>
                            </div>

                            <div class="form-group inputHere">
                                <label for="EmployeeId" class="col-sm-12 col-form-label">İşçi :</label>
                                <div class="col-sm-12">
                                    <select id="EmployeeId" class="form-control inputItem inputItemSelect selectpicker" name="EmployeeId" data-live-search="true">
                                        <option value="0" selected>Seçin ...</option>
                                        @foreach (var item in Model.Employees)
                                        {
                                            <option @(item.Id == ViewBag.User.EmployeeId ? "selected" : "") value="@item.Id">@item.Surname @item.Name @item.FutherName</option>
                                        }
                                    </select>
                                </div>
                            </div>


                            <div class="form-group addFile">
                                <label for="photo" class="col-sm-12 col-form-label">Şəkil :</label>
                                <div class="col-sm-12">
                                    <input type="image" src="~/Uploads/@(ViewBag.User.Image==null?"": ViewBag.User.Image)" width="100" />
                                    <input type="hidden" name="OldImage" value="@(ViewBag.User.Image==null?"":ViewBag.User.Image)" />
                                    <input type="file" name="Image" class="form-control inputItem" id="image" value="">
                                </div>
                            </div>
                            <div class="form-group form-check">
                                <div class="col-sm-12">
                                    <input type="checkbox" name="isadmin" value="true" class="form-check-input" @(@ViewBag.User.IsAdmin == true ? "checked" : "") id="status">
                                </div>
                                <label class="col-sm-12 form-check-label" for="status">Admin</label>
                            </div>
                        </div>
                    </div>

                    <!-- Hiden inputs -->
                    <input type="hidden" class="form-control" value="@date" name="date">
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-primary addButton">Yenilə</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
