@model BBService.Models.ViewHome
@{
    ViewBag.Title = "DepotInpUpdate";
}


<div id="DepotInpUpdate">
    <div class="contaiber-fluid">
        <div class="row">
            <div class="col-md-6 inputAccident">
                <h1>Depo məlumatlarının düzəlişi: </h1>
                <form method="post" @Url.Action("DepotInpUpdate", "Inputs") class="formTest">

                    <div class="form-group inputHere">
                        <label for="CompanyId" class="col-sm-10 col-form-label">Şirkət :</label>
                        <div class="col-sm-10">
                            <select id="CompanyId" class="form-control inputItem inputItemSelect selectpicker" name="CompanyId" data-live-search="true">
                                <option value="0" selected>Seçin ...</option>
                                @foreach (var item in Model.Companies)
                                {
                                    <option @(ViewBag.Depot.CompanyId == item.Id ? "selected" : "") value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Name" class="col-sm-10 col-form-label">Depo :</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control inputItem" id="Name" value="@(ViewBag.Depot.Name!=null?ViewBag.Depot.Name:"")" name="Name" placeholder="Daxil edin ...">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary addButton">Düzəliş edin</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

