@model BBService.Models.ViewHome
@{
    ViewBag.Title = "SecInpUpdate";
}


<div id="SecInpUpdate">
    <div class="contaiber-fluid">
        <div class="row">
            <div class="col-md-6 inputAccident">
                <h1>Sektor adı :</h1>
                <form method="post" @Url.Action("SecInpUpdate", "Inputs") class="formTest">

                    <div class="form-group">
                        <label for="sector" class="col-sm-10 col-form-label">Sektor :</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control inputItem" id="sector" value="@ViewBag.Sec.Name" name="name" placeholder="Daxil edin ...">
                        </div>
                    </div>

                    <div class="form-group inputHere">
                        <label for="DepartmentId" class="col-sm-10 col-form-label">Şöbə :</label>
                        <div class="col-sm-10">
                            <select id="DepartmentId" class="form-control inputItem inputItemSelect selectpicker" name="DepartmentId" data-live-search="true">
                                <option value="0" selected>Seçin ...</option>
                                @foreach (var item in Model.Departments)
                                {
                                    <option @(ViewBag.Sec.DepartmentId==item.Id?"selected":"") value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary addButton">Əlavə et</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

