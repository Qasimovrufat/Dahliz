@model BBService.Models.ViewDoneWorks
@{
    ViewBag.Title = "DoneWorksUpdateInput";
}


<div id="DoneWorksUpdateInput">
    <div class="contaiber-fluid">
        <div class="row">
            <div class="col-md-12 inputAccident">
                <h1>Tamamlanmış işin məlumatlarını yenilə :</h1>
                <form method="post" @Url.Action("DoneWorksUpdateInput", "Inputs") class="formTest">
                    <div class="row">
                        <div class="col-md-6 col-lg-4">

                            <div class="form-group">
                                <label for="WorkCode" class="col-sm-10 col-form-label">İş kodu :</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control inputItem" id="WorkCode" name="WorkCode" value="@(Model.donework.WorkCode==null?null: Model.donework.WorkCode)" placeholder="Daxil edin ...">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="WorkName" class="col-sm-10 col-form-label">İş Adı :</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control inputItem" id="WorkName" name="WorkName" value="@(Model.donework.WorkName==null?"": Model.donework.WorkName)" placeholder="Daxil edin ...">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="NormativeFactory" class="col-sm-10 col-form-label">Normativ zavod :</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control inputItem" id="NormativeFactory" name="NormativeFactory" value="@(Model.donework.NormativeFactory)" placeholder="Daxil edin ...">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="NormativeBakubus" class="col-sm-10 col-form-label">Normativ BakuBus</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control datepicker inputItem" id="NormativeBakubus" name="NormativeBakubus" value="@(Model.donework.NormativeBakubus)" placeholder="Daxil seçin ...">
                                </div>
                            </div>
                            <div class="form-group inputHere">
                                <label for="VehicleBrandId" class="col-sm-10 col-form-label">Marka & Model</label>
                                <div class="col-sm-10">
                                    <select id="VehicleBrandId" class="form-control inputItem inputItemSelect selectpicker" name="VehicleBrandId" data-live-search="true">
                                        <option value="0" selected>Seçin ...</option>
                                        @foreach (var item in Model.vehicleBrands)
                                        {
                                            <option @(item.Id == Model.donework.VehicleBrandId ? "selected" : "") value="@item.Id">@item.Brand</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <!-- Hiden inputs -->
                            <input type="hidden" class="form-control" name="Id" value="@Model.donework.Id">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary addButton">Yenilə</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



